<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gather.myProfileActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textMyProfile"
        android:layout_toStartOf="@+id/textMyProfile" />

    <EditText
        android:id="@+id/editTextDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_ChangeDisplayName"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_ChangeDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:layout_below="@+id/textView9"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textMyProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_column="0"
        android:layout_row="0"
        android:text="My Profile"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewSkills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="View My Skills"
        android:textSize="20sp"
        android:layout_below="@+id/editTextDisplayName"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_ViewSkills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewSkills"
        android:layout_alignBottom="@+id/textViewSkills"
        android:layout_alignParentEnd="true"
        android:text="Skills" />

    <TextView
        android:id="@+id/textGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_ViewSkills"
        android:layout_marginTop="14dp"
        android:text="My Group"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_leaveGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textGroup"
        android:text="Leave Group" />

</RelativeLayout>

