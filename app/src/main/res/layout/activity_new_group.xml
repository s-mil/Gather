<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gather.newGroupActivity">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="0dp"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="7dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rate your skills out of 10, 0 means you do not know and 10 being expert level"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Java Skill Rating:"
                    tools:layout_editor_absoluteX="59dp"
                    tools:layout_editor_absoluteY="-14dp" />

                <Spinner
                    android:id="@+id/javaLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinnerItems" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C++ Skill Rating:"
                    tools:layout_editor_absoluteX="59dp"
                    tools:layout_editor_absoluteY="-14dp" />

                <Spinner
                    android:id="@+id/cppLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinnerItems" />

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C# Skill Rating:"
                    tools:layout_editor_absoluteX="59dp"
                    tools:layout_editor_absoluteY="-14dp" />

                <Spinner
                    android:id="@+id/cSharpLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinnerItems" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HTML Skill Rating:"
                    tools:layout_editor_absoluteX="59dp"
                    tools:layout_editor_absoluteY="-14dp" />

                <Spinner
                    android:id="@+id/htmlLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinnerItems" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Python Skill Rating:"
                    tools:layout_editor_absoluteX="59dp"
                    tools:layout_editor_absoluteY="-14dp" />

                <Spinner
                    android:id="@+id/pythonLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinnerItems" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Android Skill Rating:"
                    tools:layout_editor_absoluteX="59dp"
                    tools:layout_editor_absoluteY="-14dp" />

                <Spinner
                    android:id="@+id/androidLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinnerItems" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IOS Skill Rating:"
                    tools:layout_editor_absoluteX="59dp"
                    tools:layout_editor_absoluteY="-14dp" />

                <Spinner
                    android:id="@+id/iosLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinnerItems" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GNU/Linux Skill Rating:"
                    tools:layout_editor_absoluteX="59dp"
                    tools:layout_editor_absoluteY="-14dp" />

                <Spinner
                    android:id="@+id/linuxLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinnerItems" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OSX Skill Rating:"
                    tools:layout_editor_absoluteX="59dp"
                    tools:layout_editor_absoluteY="-14dp" />

                <Spinner
                    android:id="@+id/osxLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinnerItems" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Windows Skill Rating:"
                    tools:layout_editor_absoluteX="59dp"
                    tools:layout_editor_absoluteY="-14dp" />

                <Spinner
                    android:id="@+id/windowsLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinnerItems" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Art Skill Rating:"
                    tools:layout_editor_absoluteX="59dp"
                    tools:layout_editor_absoluteY="-14dp" />

                <Spinner
                    android:id="@+id/artLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinnerItems" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Design Skill Rating:"
                    tools:layout_editor_absoluteX="59dp"
                    tools:layout_editor_absoluteY="-14dp" />

                <Spinner
                    android:id="@+id/designLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinnerItems" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Leadership Skill Rating:"
                    tools:layout_editor_absoluteX="59dp"
                    tools:layout_editor_absoluteY="-14dp" />

                <Spinner
                    android:id="@+id/leadershipLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinnerItems" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update skills" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal" />

</android.support.constraint.ConstraintLayout>
